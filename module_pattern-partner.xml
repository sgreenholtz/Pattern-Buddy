<?xml version="1.0" encoding="UTF-8"?>
<project name="module_pattern-partner" default="compile.module.pattern-partner">
  <dirname property="module.pattern-partner.basedir" file="${ant.file.module_pattern-partner}"/>
  
  <property name="module.jdk.home.pattern-partner" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.pattern-partner" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.pattern-partner" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.pattern-partner" value="-encoding UTF-8 -source 1.7 -target 1.7 ${compiler.args}"/>
  
  <property name="pattern-partner.output.dir" value="${module.pattern-partner.basedir}/out/production/Pattern-Partner"/>
  <property name="pattern-partner.testoutput.dir" value="${module.pattern-partner.basedir}/out/test/Pattern-Partner"/>
  
  <path id="pattern-partner.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="pattern-partner.module.production.classpath">
    <path refid="${module.jdk.classpath.pattern-partner}"/>
    <path refid="library.mysql-connector-java-5.1.38-bin.classpath"/>
    <path refid="library.commons-fileupload-1.3.1.classpath"/>
    <path refid="library.servlet-api.classpath"/>
    <path refid="library.rhino-1.7.7.1.classpath"/>
    <path refid="library.pdfbox-app-2.0.0-rc3.classpath"/>
  </path>
  
  <path id="pattern-partner.runtime.production.module.classpath">
    <pathelement location="${pattern-partner.output.dir}"/>
    <path refid="library.mysql-connector-java-5.1.38-bin.classpath"/>
    <path refid="library.commons-fileupload-1.3.1.classpath"/>
    <path refid="library.servlet-api.classpath"/>
    <path refid="library.rhino-1.7.7.1.classpath"/>
    <path refid="library.pdfbox-app-2.0.0-rc3.classpath"/>
  </path>
  
  <path id="pattern-partner.module.classpath">
    <path refid="${module.jdk.classpath.pattern-partner}"/>
    <pathelement location="${pattern-partner.output.dir}"/>
    <path refid="library.mysql-connector-java-5.1.38-bin.classpath"/>
    <path refid="library.commons-fileupload-1.3.1.classpath"/>
    <path refid="library.servlet-api.classpath"/>
    <path refid="library.rhino-1.7.7.1.classpath"/>
    <path refid="library.pdfbox-app-2.0.0-rc3.classpath"/>
  </path>
  
  <path id="pattern-partner.runtime.module.classpath">
    <pathelement location="${pattern-partner.testoutput.dir}"/>
    <pathelement location="${pattern-partner.output.dir}"/>
    <path refid="library.mysql-connector-java-5.1.38-bin.classpath"/>
    <path refid="library.commons-fileupload-1.3.1.classpath"/>
    <path refid="library.servlet-api.classpath"/>
    <path refid="library.rhino-1.7.7.1.classpath"/>
    <path refid="library.pdfbox-app-2.0.0-rc3.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.pattern-partner">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.pattern-partner">
    <patternset refid="excluded.from.module.pattern-partner"/>
  </patternset>
  
  <path id="pattern-partner.module.sourcepath">
    <dirset dir="${module.pattern-partner.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.pattern-partner" depends="compile.module.pattern-partner.production,compile.module.pattern-partner.tests" description="Compile module Pattern-Partner"/>
  
  <target name="compile.module.pattern-partner.production" depends="register.custom.compilers" description="Compile module Pattern-Partner; production classes">
    <mkdir dir="${pattern-partner.output.dir}"/>
    <javac2 destdir="${pattern-partner.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.pattern-partner}/javac">
      <compilerarg line="${compiler.args.pattern-partner}"/>
      <bootclasspath refid="pattern-partner.module.bootclasspath"/>
      <classpath refid="pattern-partner.module.production.classpath"/>
      <src refid="pattern-partner.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.pattern-partner"/>
    </javac2>
    
    <copy todir="${pattern-partner.output.dir}">
      <fileset dir="${module.pattern-partner.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.pattern-partner.tests" depends="register.custom.compilers,compile.module.pattern-partner.production" description="compile module Pattern-Partner; test classes" unless="skip.tests"/>
  
  <target name="clean.module.pattern-partner" description="cleanup module">
    <delete dir="${pattern-partner.output.dir}"/>
    <delete dir="${pattern-partner.testoutput.dir}"/>
  </target>
</project>