<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
           version="3.0">

    <resource-ref>
        <description>MySQL Database</description>
        <res-ref-name>jdbc/PatternPartner</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <context-param>
        <description>Location to store uploaded file</description>
        <param-name>file-upload</param-name>
        <param-value>
            c:/Users/Kolya/Dropbox/Pattern-Partner/temp
        </param-value>
    </context-param>

    <servlet>
        <servlet-name>PatternPreview</servlet-name>
        <servlet-class>com.patternpartner.PatternPreview</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PatternPreview</servlet-name>
        <url-pattern>/PatternPreview</url-pattern>
    </servlet-mapping>

</web-app>