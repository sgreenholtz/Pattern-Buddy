<?xml version="1.0" encoding="UTF-8"?>
<project name="pattern-partner" default="all">
  
  
  <property file="pattern-partner.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.swc"/>
    <include name="*.apk"/>
    <include name="*.zip"/>
    <include name="*.egg"/>
    <include name="*.ane"/>
    <include name="*.jar"/>
    <include name="*.ear"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
    <exclude name="**/?*.aj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.8" value="${jdk.home.1.8}/bin"/>
  <path id="jdk.classpath.1.8">
    <fileset dir="${jdk.home.1.8}">
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/ext/cldrdata.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/jfxrt.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/nashorn.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jfxswt.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
      <include name="lib/ant-javafx.jar"/>
      <include name="lib/dt.jar"/>
      <include name="lib/javafx-mx.jar"/>
      <include name="lib/jconsole.jar"/>
      <include name="lib/sa-jdi.jar"/>
      <include name="lib/tools.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.8}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.8}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.8"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.commons-fileupload-1.3.1.classpath">
    <pathelement location="${basedir}/lib/commons-fileupload-1.3.1.jar"/>
    <pathelement location="${basedir}/lib/commons-io-2.4.jar"/>
  </path>
  
  <path id="library.mysql-connector-java-5.1.38-bin.classpath">
    <pathelement location="${basedir}/lib/mysql-connector-java-5.1.38-bin.jar"/>
  </path>
  
  <path id="library.pdfbox-app-2.0.0-rc3.classpath">
    <pathelement location="${basedir}/lib/pdfbox-app-2.0.0-RC3.jar"/>
  </path>
  
  <path id="library.rhino-1.7.7.1.classpath">
    <pathelement location="${basedir}/lib/rhino-1.7.7.1.jar"/>
  </path>
  
  <path id="library.servlet-api.classpath">
    <pathelement location="${basedir}/lib/servlet-api.jar"/>
  </path>
  
  
  <!-- Application Server Libraries -->
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  <import file="${basedir}/module_pattern-partner.xml"/>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.pattern-partner, clean.artifact.root" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.pattern-partner" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.pattern-partner:web" value="${basedir}/out/artifacts/Pattern_Partner_Web"/>
    <property name="artifact.output.root" value="${basedir}/out/artifacts/ROOT"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="temp.jar.path.Pattern-Partner_Web.war" value="${artifacts.temp.dir}/Pattern-Partner_Web.war"/>
  </target>
  
  <target name="clean.artifact.root" description="clean ROOT artifact output">
    <delete dir="${artifact.output.root}"/>
  </target>
  
  <target name="artifact.pattern-partner:web" depends="init.artifacts, artifact.root" description="Build &#39;Pattern-Partner:Web&#39; artifact">
    <property name="artifact.temp.output.pattern-partner:web" value="${artifacts.temp.dir}/Pattern_Partner_Web"/>
    <mkdir dir="${artifact.temp.output.pattern-partner:web}"/>
    <zip destfile="${temp.jar.path.Pattern-Partner_Web.war}">
      <zipfileset dir="${artifact.output.root}"/>
    </zip>
    <copy file="${temp.jar.path.Pattern-Partner_Web.war}" tofile="${artifact.temp.output.pattern-partner:web}/Pattern-Partner_Web.war"/>
  </target>
  
  <target name="artifact.root" depends="init.artifacts, compile.module.pattern-partner" description="Build &#39;ROOT&#39; artifact">
    <mkdir dir="${artifact.output.root}"/>
    <copy todir="${artifact.output.root}">
      <fileset dir="${basedir}/web"/>
    </copy>
    <mkdir dir="${artifact.output.root}/WEB-INF"/>
    <copy file="${basedir}/web/WEB-INF/web.xml" tofile="${artifact.output.root}/WEB-INF/web.xml"/>
    <mkdir dir="${artifact.output.root}/WEB-INF"/>
    <mkdir dir="${artifact.output.root}/WEB-INF/classes"/>
    <copy todir="${artifact.output.root}/WEB-INF/classes">
      <fileset dir="${pattern-partner.output.dir}"/>
    </copy>
    <mkdir dir="${artifact.output.root}/WEB-INF/lib"/>
    <copy file="${basedir}/lib/mysql-connector-java-5.1.38-bin.jar" tofile="${artifact.output.root}/WEB-INF/lib/mysql-connector-java-5.1.38-bin.jar"/>
    <copy file="${basedir}/lib/commons-fileupload-1.3.1.jar" tofile="${artifact.output.root}/WEB-INF/lib/commons-fileupload-1.3.1.jar"/>
    <copy file="${basedir}/lib/commons-io-2.4.jar" tofile="${artifact.output.root}/WEB-INF/lib/commons-io-2.4.jar"/>
    <copy file="${basedir}/lib/pdfbox-app-2.0.0-RC3.jar" tofile="${artifact.output.root}/WEB-INF/lib/pdfbox-app-2.0.0-RC3.jar"/>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.pattern-partner:web, artifact.root" description="Build all artifacts">
    <mkdir dir="${artifact.output.pattern-partner:web}"/>
    <copy todir="${artifact.output.pattern-partner:web}">
      <fileset dir="${artifact.temp.output.pattern-partner:web}"/>
    </copy>
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>