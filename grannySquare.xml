<pattern>
    <materials>
        <hook size="any" />
        <yarn />
    </materials>
  
    <directions>
        <row number="1">
            <magic-circle />
            <chain>2</chain>
            <in-stitch location="magic-circle">
                <double-crochet>2</double-crochet>
                <repeat type="times" value="3>
                    <chain>1</chain>
                    <double-crochet>3</double-crochet>
                </repeat>
            </in-stitch>
            <join />
        </row>
        <row number="2">
            <chain>3</chain>
            <in-stitch location="corner-chain">
                <double-crochet>2</double-crochet>
            </in-stitch>
            <chain>1</chain>
            <repeat type="around">
                <in-stitch location="corner-chain">
                    <double-crochet>3</double-crochet>
                    <chain>1</chain>
                    <double-crochet>3</double-crochet>
                    <chain>1</chain>
                </in-stitch>
            </repeat>
            <in-stitch location="corner-chain">
                <double-crochet>3</double-crochet>
                <chain>1</chain>
            </in-stitch>
            <join />
        </row>
        <row number="3">
            <chain>3</chain>
            <in-stitch location="corner-chain">
                <double-crochet>2</double-crochet>
            </in-stitch>
            <chain>1</chain>
            <repeat type="around">
                <in-stitch location="chain-space">
                    <double-crochet>3</double-crochet>
                    <chain>1</chain>
                </in-stitch>
                <in-stitch location="corner-chain">
                    <double-crochet>3</double-crochet>
                    <chain>1</chain>
                    <double-crochet>3</double-crochet>
                    <chain>1</chain>
                </in-stitch>
            </repeat>
            <in-stitch location="corner-chain">
                <double-crochet>3</double-crochet>
                <chain>1</chain>
            </in-stitch>
            <join />
        </row>
        <general-information>To make the granny square bigger, simply add <double-crochet>3</double-crochet><chain>1</chain> in each chain space</general-information>
    </directions>
</pattern>
